    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (GRPC)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Server.Communication.GRPC/bin/Debug/net8.0/Server.Communication.GRPC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Server.Communication.GRPC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "launchSettingsProfile": "http"
        },
